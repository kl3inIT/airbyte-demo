<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="AirbyteDemo">
        <dropForeignKeyConstraint baseTableName="api_source" constraintName="fk_api_source_on_id"/>
    </changeSet>
    <changeSet id="2" author="AirbyteDemo">
        <dropForeignKeyConstraint baseTableName="database_source" constraintName="fk_database_source_on_id"/>
    </changeSet>
    <changeSet id="3" author="AirbyteDemo">
        <dropForeignKeyConstraint baseTableName="file_source" constraintName="fk_file_source_on_id"/>
    </changeSet>
    <changeSet id="4" author="AirbyteDemo">
        <createTable tableName="SOURCE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_SOURCE"/>
            </column>
            <column name="DTYPE" type="VARCHAR(31)"/>
            <column name="VERSION" type="INT">
                <constraints nullable="false"/>
            </column>
            <column name="NAME" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="DESCRIPTION" type="VARCHAR(1000)"/>
            <column name="AIRBYTE_SOURCE_ID" type="VARCHAR(100)"/>
            <column name="RAW_CONFIGURATION" type="CLOB"/>
            <column name="SOUCE_TYPE" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="5" author="AirbyteDemo">
        <addForeignKeyConstraint baseColumnNames="ID" baseTableName="API_SOURCE" constraintName="FK_API_SOURCE_ON_ID"
                                 referencedColumnNames="ID" referencedTableName="SOURCE"/>
    </changeSet>
    <changeSet id="6" author="AirbyteDemo">
        <addForeignKeyConstraint baseColumnNames="ID" baseTableName="DATABASE_SOURCE"
                                 constraintName="FK_DATABASE_SOURCE_ON_ID" referencedColumnNames="ID"
                                 referencedTableName="SOURCE"/>
    </changeSet>
    <changeSet id="7" author="AirbyteDemo">
        <addForeignKeyConstraint baseColumnNames="ID" baseTableName="FILE_SOURCE" constraintName="FK_FILE_SOURCE_ON_ID"
                                 referencedColumnNames="ID" referencedTableName="SOURCE"/>
    </changeSet>
    <changeSet id="8" author="AirbyteDemo">
        <dropTable cascadeConstraints="true" tableName="data_source"/>
    </changeSet>
</databaseChangeLog>