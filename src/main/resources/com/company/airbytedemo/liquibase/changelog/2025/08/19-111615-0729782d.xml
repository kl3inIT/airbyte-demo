<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="AirbyteDemo">
        <addColumn tableName="FILE_SOURCE">
            <column name="FILE_FORMAT" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="FILE_FORMAT" tableName="FILE_SOURCE"/>
    </changeSet>
    <changeSet id="2" author="AirbyteDemo">
        <addColumn tableName="FILE_SOURCE">
            <column name="FILE_PROVIDER" type="VARCHAR(255)"/>
        </addColumn>

        <addNotNullConstraint columnName="FILE_PROVIDER" tableName="FILE_SOURCE"/>
    </changeSet>
    <changeSet id="3" author="AirbyteDemo">
        <dropColumn columnName="format" tableName="file_source"/>

        <dropColumn columnName="provider" tableName="file_source"/>
    </changeSet>
</databaseChangeLog>