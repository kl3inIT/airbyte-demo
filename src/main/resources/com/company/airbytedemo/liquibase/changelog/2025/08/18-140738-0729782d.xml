<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1" author="AirbyteDemo">
        <createTable tableName="API_SOURCE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_API_SOURCE"/>
            </column>
            <column name="DECLARATIVE_MANIFEST_JSON" type="CLOB"/>
            <column name="DECLARATIVE_DEFINITION_ID" type="CLOB"/>
            <column name="BASE_URL" type="CLOB"/>
        </createTable>
    </changeSet>
    <changeSet id="2" author="AirbyteDemo">
        <createTable tableName="DATABASE_SOURCE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_DATABASE_SOURCE"/>
            </column>
            <column name="DB_TYPE" type="VARCHAR(255)"/>
            <column name="HOST" type="VARCHAR(255)"/>
            <column name="PORT" type="BIGINT"/>
            <column name="DATABASE_" type="VARCHAR(255)"/>
            <column name="USERNAME" type="VARCHAR(255)"/>
            <column name="PASSWORD" type="VARCHAR(255)"/>
            <column name="TUNNEL_CONFIG_JSON" type="VARCHAR(255)"/>
            <column name="REPLICATION_JSON" type="VARCHAR(255)"/>
            <column name="SSL_CONFIG_JSON" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="3" author="AirbyteDemo">
        <createTable tableName="FILE_SOURCE">
            <column name="ID" type="UUID">
                <constraints nullable="false" primaryKey="true" primaryKeyName="PK_FILE_SOURCE"/>
            </column>
            <column name="DATASET_NAME" type="VARCHAR(255)"/>
            <column name="FORMAT" type="VARCHAR(255)"/>
            <column name="PROVIDER" type="VARCHAR(255)"/>
            <column name="URL" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="4" author="AirbyteDemo">
        <addForeignKeyConstraint baseColumnNames="ID" baseTableName="API_SOURCE" constraintName="FK_API_SOURCE_ON_ID"
                                 referencedColumnNames="ID" referencedTableName="DATA_SOURCE"/>
    </changeSet>
    <changeSet id="5" author="AirbyteDemo">
        <addForeignKeyConstraint baseColumnNames="ID" baseTableName="DATABASE_SOURCE"
                                 constraintName="FK_DATABASE_SOURCE_ON_ID" referencedColumnNames="ID"
                                 referencedTableName="DATA_SOURCE"/>
    </changeSet>
    <changeSet id="6" author="AirbyteDemo">
        <addForeignKeyConstraint baseColumnNames="ID" baseTableName="FILE_SOURCE" constraintName="FK_FILE_SOURCE_ON_ID"
                                 referencedColumnNames="ID" referencedTableName="DATA_SOURCE"/>
    </changeSet>
    <changeSet id="7" author="AirbyteDemo">
        <dropColumn columnName="base_url" tableName="data_source"/>

        <dropColumn columnName="database_" tableName="data_source"/>

        <dropColumn columnName="dataset_name" tableName="data_source"/>

        <dropColumn columnName="db_type" tableName="data_source"/>

        <dropColumn columnName="declarative_definition_id" tableName="data_source"/>

        <dropColumn columnName="declarative_manifest_json" tableName="data_source"/>

        <dropColumn columnName="format" tableName="data_source"/>

        <dropColumn columnName="host" tableName="data_source"/>

        <dropColumn columnName="password" tableName="data_source"/>

        <dropColumn columnName="port" tableName="data_source"/>

        <dropColumn columnName="provider" tableName="data_source"/>

        <dropColumn columnName="replication_json" tableName="data_source"/>

        <dropColumn columnName="ssl_config_json" tableName="data_source"/>

        <dropColumn columnName="tunnel_config_json" tableName="data_source"/>

        <dropColumn columnName="url" tableName="data_source"/>

        <dropColumn columnName="username" tableName="data_source"/>
    </changeSet>
</databaseChangeLog>