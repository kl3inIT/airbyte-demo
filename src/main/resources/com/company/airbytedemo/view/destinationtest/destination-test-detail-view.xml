<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://destinationTestDetailView.title"
      focusComponent="form">
    <data>
        <instance id="destinationTestDc"
                  class="com.company.airbytedemo.entity.DestinationTest">
            <fetchPlan extends="_base">
                <property name="rawConfig"/>
            </fetchPlan>
            <loader id="destinationTestDl"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="destinationTestDc">
            <responsiveSteps>
                <responsiveStep minWidth="0" columns="1"/>
                <responsiveStep minWidth="40em" columns="2"/>
            </responsiveSteps>
            <textField id="nameField" property="name"/>
            <textField id="destinationTypeField" property="destinationType"/>

        </formLayout>
        <vbox id="destinationDetailVbox">

        </vbox>

        <hbox id="detailActions">
            <button id="saveAndCloseButton" action="saveAction"/>
            <button id="closeButton" action="closeAction"/>
        </hbox>
    </layout>
</view>
